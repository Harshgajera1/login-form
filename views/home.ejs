<h3>welcome <%= locals.user %></h3>
<style>
    td{
        padding: 7px;
    }
    h2{
        text-align: center;
    }
    table{
        margin: auto;
    }
    #btn{
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        text-decoration: none;
        padding: 6px 12px;
        background-color: #282828;
        color: #fff;
        border-radius: 5px;
        border: 1px solid #282828;
        font-weight: 600;
        transition: all .5s;
    }
    #btn:hover{
        border: 1px solid #282828;
        background-color: transparent;
        color: #282828;
    }
</style>

<h2>This is Home Page.</h2>

<form action="/insertdata" method="post" enctype="multipart/form-data" >
    <table border="1">
         <tr>
            <td>Enter Book Name: </td>
            <td><input type="text" name="name" ></td>
        </tr>
        <tr>
            <td>Enter Author: </td>
            <td><input type="text" name="auther"></td>
        </tr>
        <tr>
             <td>Select Publisher: </td>
            <td><input type="checkbox" name="publisher[]" value="Akashic">Akashic Books(Brooklyn,NY)&nbsp;&nbsp;
                <input type="checkbox" name="publisher[]" value="Dzanc">Dzanc Books(Detroit,MI)&nbsp;&nbsp;
                <input type="checkbox" name="publisher[]" value="Graywolf">Graywolf Press (Minneapolis)
            </td>
         </tr>
         <% book = ['Inspiration','Horror','Thriller','Historical Fiction','Comic Book or Graphic Novel'] %>
         <tr>
            <td>BookCategory: </td>
            <td><select name="category" >
                <option>--Select BookCategory</option>
                <% for(var i=0; i<book.length; i++){%> 
                    <option value="<%=book[i]%>"><%=book[i]%></option>    
                <%} %>
            </select></td>
         </tr>
         <tr>
             <td>Enter Pages: </td>
             <td><input type="text" name="page"></td>
         </tr>
         <tr>
             <td>Description: </td>
             <td><textarea name="description" cols="50" rows="3"></textarea></td>
         </tr>
         <tr>
             <td>FrontPage Image: </td>
             <td><input type="file" name="img"></td>
         </tr>
         <tr>
             <td>Publishing Date: </td>
             <td><input type="date" name="date"></td>
         </tr>
         <% rating = ['1','2','3','4','5'] %>
         <tr>
             <td>Book Rating: </td>
             <td>
                <% for(var i=0; i<rating.length; i++){%>
                    <input type="radio" name="rating" value="<%=rating[i]%>"><%=rating[i]%>&nbsp;&nbsp;
                <%} %>
            </td>
         </tr>
         <tr>
             <td></td>
             <td><input type="submit" name="submit" value="Insert"></td>
         </tr>
        </table>
    </form>
    
    <a href="/showdata" id="btn">Show Data</a>
    <a href="/register">Register</a>





